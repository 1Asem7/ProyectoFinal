@page "/citas"
@using Microsoft.EntityFrameworkCore
@using ProyectoFinal.Data
@using ProyectoFinal.Models
@inject ClinicaContext Contexto
@inject IJSRuntime JS

<h3>Agenda de Citas</h3>

<div class="mb-3">
    <a href="/citas/nueva" class="btn btn-primary">+ Agendar Cita</a>
</div>

@if (misCitas == null)
{
    <p><em>Cargando agenda...</em></p>
}
else if (misCitas.Count == 0)
{
    <p>No hay citas programadas.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha/Hora</th>
                <th>Paciente</th>
                <th>Dentista</th>
                <th>Motivo</th>
                <th>Estado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in misCitas)
            {
                <tr>
                    <td>@c.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>

                    
                    <td>@c.Paciente?.Nombre @c.Paciente?.Apellido</td>
                    <td>@c.Dentista?.Nombre (@c.Dentista?.Especialidad)</td>

                    <td>@c.MotivoConsulta</td>
                    <td>
                        <span class="badge bg-info text-dark">@c.Estado</span>
                    </td>
                    <td class="text-center">
                        <a href="/citas/editar/@c.IdCita" class="btn btn-outline-warning btn-sm me-2" title="Editar">
                            Editar
                        </a>
                        <button class="btn btn-outline-danger btn-sm" title="Eliminar" @onclick="() => BorrarCitas(c)">
                            Borrar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Cita>? misCitas;

    protected override async Task OnInitializedAsync()

    {
        await CargarCitas();
    }
    private async Task CargarCitas()
    {
        // IMPORTANTE: Usamos .Include para traer los datos de las tablas relacionadas
        misCitas = await Contexto.Citas
            .Include(c => c.Paciente)
            .Include(c => c.Dentista)
            .OrderBy(c => c.FechaHora) // Ordenar por fecha
            .ToListAsync();
    }
    private async Task BorrarCitas(Cita c)
    {
        bool confirmado = await JS.InvokeAsync<bool>("confirm", $"¿Seguro que deseas borrar la cita de {c.Paciente?.Nombre}?");
        if (confirmado)
        {
            Contexto.Citas.Remove(c);
            await Contexto.SaveChangesAsync();
            await CargarCitas();
        }
    }
}